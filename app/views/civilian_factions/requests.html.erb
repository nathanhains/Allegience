<%if @civilian_faction.owner_id == @current_user.civilian.id%>
<div class="container mt-5">
        <div class="chat">
            <div class="chat-header">
                <div class="profile-civ">
                    <%=image_tag(@civilian_faction.owner.avatar.to_s, class:"pp-civ mb-2")%>
                    <span><%=link_to "Back", civilian_faction_path(@civilian_faction), class: "btn btn-md"%></span>
                </div>
            </div> 
            <div class="chat-box">
                <div class="center">
                <h2>Requests:</h2>
                <%@civilian_faction.civilian_faction_requests.each do |request|%>
                    <%if request.accepted == false%>
                    <ul>
                    <li style="opacity: 0.65;"><h2 class="mt-3" style="font-size: 80%;"><%=request.requestor.name%> <%=link_to "Accept", civilian_faction_accept_path(@civilian_faction, request.requestor), class: "btn btn-sm btn-secondary"%></h2></li>
                    </ul>
                    <%end%>
                <%end%>
                </div>
            </div> 
        </div>
    </div>
<%end%>