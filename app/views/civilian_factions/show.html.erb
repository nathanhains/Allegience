<%=@civilian_faction.name%>
<%if @civilian_faction.owner_id == @current_user.civilian.id%>
<%=link_to "requests", civilian_faction_requests_path(@civilian_faction)%>
<%end%><br>
<%if @civilian_faction.owner_id != @current_user.civilian.id && !@civilian_faction_request%>
<%= form_for(@civilian_faction) do |f| %>
    <%= f.submit "Join" %>
<% end %>
<%end%>

<%if @civilian_faction_request && @civilian_faction_request.accepted == false%>
<%= "Awaiting Acceptance"%>
<%elsif @civilian_faction_request && @civilian_faction_request.accepted == true || @civilian_faction.owner_id == @current_user.civilian.id%>
<%=form_for @comment, :action => "post" do |f|%>
<%=f.label "Comment"%>
<%=f.text_area :body%>
<%=f.hidden_field :civilian_faction_id, value: @civilian_faction.id%>
<%=f.hidden_field :civilian_id, value: @current_user.id%>
<%=f.submit "Submit"%>
<%end%>
<%@civilian_faction.comments.order(id: :desc).each do |comment|%>
<%=comment.civilian.name%>:<%=comment.body%><br>
<%end%>
<%end%>