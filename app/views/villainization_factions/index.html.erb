<%find_user_villainization%>
<div class="container-fluid">
    <h1 class="mt-5">Villain Factions</h1>
         <p class="subtitle"><%=link_to "My factions", villainization_factions_path(id: @villainization.id), class: "btn btn-danger"%>
		<%=link_to "Create a Faction", new_villainization_faction_path, class: "btn btn-danger"%></p>
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
			<%@villainization_factions.each do |faction|%>
			<div class="col-5">
				<div class="card card-block card-3" style="text-align: center">
                <div class="img3 visible mt-2"><%=image_tag(faction.owner.villain.avatar.to_s)%></div>
                            <div class="main-text">
                            <h2 class="visible" style="font-family: 'Fantasy'; color: white;"><%=faction.name%></h2>
                            <h3 class="visible" style="font-family: 'Fantasy';"><%=faction.villainization_faction_requests.where(accepted: true).count%> members</h3>
                            <h3 class="visible mt-2" style="font-family: 'Fantasy';"><%=link_to "View", villainization_faction_path(faction), class: "btn btn-lg"%></h3>

                                </div>
                            <div class="socials">
                            </div>
                </div>
			</div>
            <%end%>
    </div>
</div>