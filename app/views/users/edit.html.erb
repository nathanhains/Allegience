<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      :
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %> 


<%= form_for(@user, html: { multiport: true }) do |f|%>
<%= f.label :username%>
<%=f.text_field :username%><br>

<%=f.label "Civilian Name"%>
<%=f.text_field :alter_ego%>

<%= f.label :email%>
<%=f.text_field :email%><br>

<%= f.label :password%>
<%=f.password_field :password%><br>

<%=f.label "Civilian Avatar"%>
<%= f.file_field :avatar %>

<%=f.submit "Save Change"%>
<%end%>