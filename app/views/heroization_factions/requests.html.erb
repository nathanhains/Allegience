
<%if @heroization_faction.owner_id == @heroization.id%>
<div class="container mt-5">
        <div class="chat">
            <div class="chat-header">
                <div class="profile-hero">
                    <%=image_tag(@heroization_faction.owner.hero.avatar.to_s, class:"pp-hero mb-2")%>
                    <span><%=link_to "Back", heroization_faction_path(@heroization_faction), class: "btn btn-md", style:"color:white"%></span>
                </div>
            </div> 
            <div class="chat-box">
                <div class="center">
                <h2 style="margin-left: -6%;">Requests:</h2>
                <%@heroization_faction.heroization_faction_requests.each do |request|%>
                    <%if request.accepted == false%>
                    <ul>
                    <li style="margin-left: -10%; margin-right: auto"><h2 class="mt-3" style="font-size: 80%; opacity: 100%;"><%=request.requestor.hero.name%> <%=link_to "Accept", heroization_faction_accept_path(@heroization_faction, request.requestor), class: "btn btn-sm btn-primary"%></h2></li>
                    <%end%>
                    </ul>
                <%end%>
                </div>
            </div> 
        </div>
    </div>
<%end%>