
<%if @heroization_faction.owner_id == @heroization.id%>
<div class="container mt-5">
        <div class="chat">
            <div class="chat-header">
                <div class="profile-hero">
                    <%=image_tag(@heroization_faction.owner.hero.avatar.to_s, class:"pp-hero mb-2")%>
                    <span><%=link_to "Back", heroization_faction_path(@heroization_faction), class: "btn btn-sm btn-primary", style:"color:white"%></span>
                </div>
            </div> 
            <div class="chat-box">
                <div class="center mt-2">
                <h2 style="margin-left: -6%;">Requests:</h2>
                <%@heroization_faction.heroization_faction_requests.each do |request|%>
                    <%if request.accepted == false%>
                    <ul style="margin-left: -22%;">
                    <li style=" opacity: 0.65;"><h3 class="mt-3" style="font-size: 80%;"><%=request.requestor.hero.name%> - <%=request.description%> </h3></li>
                    <%=link_to "Accept", heroization_faction_accept_path(@heroization_faction, request.requestor), class: "btn btn-sm btn-primary", style: "margin-left: 10%;"%>
                    <%end%>
                    </ul>
                <%end%>
                </div>
            </div> 
        </div>
    </div>
<%end%>